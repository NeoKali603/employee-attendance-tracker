# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration (Development)
DB_TYPE=mysql
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=attendance_tracker
DB_PORT=3306

# Railway MySQL (Production - will be auto-set by Railway)
MYSQLHOST=localhost
MYSQLUSER=root
MYSQLPASSWORD=
MYSQLDATABASE=attendance_tracker
MYSQLPORT=3306

# Security
JWT_SECRET=your-development-jwt-secret-key-here
BCRYPT_ROUNDS=12

# CORS Origins
CORS_ORIGIN_DEV=http://localhost:3000
CORS_ORIGIN_PROD=https://your-frontend-app.railway.app

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=100