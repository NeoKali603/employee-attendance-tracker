# Production Environment Variables
NODE_ENV=production
PORT=8080

# Railway will automatically provide these:
# MYSQLHOST
# MYSQLUSER
# MYSQLPASSWORD
# MYSQLDATABASE
# MYSQLPORT

# Security
JWT_SECRET=your-production-jwt-secret-key-change-this
BCRYPT_ROUNDS=12

# CORS Origins
CORS_ORIGIN_PROD=https://employee-attendance-tracker-frontend.railway.app

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=1000

# Logging
LOG_LEVEL=error